<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/BLACK" >

    <LinearLayout
        android:id="@+id/layBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnDist1"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_margin="16px"
            android:background="@drawable/btn_history_dist1" />

        <Button
            android:id="@+id/btnDist2"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_margin="16px"
            android:background="@drawable/btn_history_dist2"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnCalorie1"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_margin="16px"
            android:background="@drawable/btn_history_calorie1" />

        <Button
            android:id="@+id/btnCalorie2"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_margin="16px"
            android:background="@drawable/btn_history_calorie2"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnStep1"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_margin="16px"
            android:background="@drawable/btn_history_step1" />

        <Button
            android:id="@+id/btnStep2"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_margin="16px"
            android:background="@drawable/btn_history_step2"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnTime1"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_margin="16px"
            android:background="@drawable/btn_history_time1" />

        <Button
            android:id="@+id/btnTime2"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_margin="16px"
            android:background="@drawable/btn_history_time2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/layBtn"
        android:layout_marginTop="3dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layView_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layView11"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:orientation="vertical" >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layView12"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layView13"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layView14"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layView_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layView21"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layView22"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layView23"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layView24"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>