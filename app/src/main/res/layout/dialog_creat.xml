<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#000000"
              android:layout_width="1190px"
              android:layout_height="627px">
    <TextView
        android:layout_marginTop="18px"
        android:gravity="center_horizontal"
        android:textSize="30px"
        android:textColor="@color/WHITE"
        android:text="请选择马拉松"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="28px"
        android:background="#2c2c2c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="389px">
           <!-- <HorizontalScrollView
                android:layout_marginTop="26px"
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarAlwaysDrawHorizontalTrack="false" >
                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>-->
            <GridView
                android:layout_marginTop="26px"
                android:numColumns="4"
                android:verticalSpacing="26dp"
                android:horizontalSpacing="15dp"
                android:id="@+id/gv_getSence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </GridView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="39px"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn1_cancel"
            android:background="#535353"
            android:textColor="@color/WHITE"
            android:text="取消"
            android:layout_width="267px"
            android:layout_height="72px"/>
        <Button
            android:id="@+id/btn1_queding"
            android:layout_marginLeft="24px"
            android:background="#535353"
            android:textColor="@color/WHITE"
            android:text="确定"
            android:layout_width="267px"
            android:layout_height="72px"/>
    </LinearLayout>

